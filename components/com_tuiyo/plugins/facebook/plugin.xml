<?xml version="1.0" encoding="utf-8"?>
<install type="plugin" version="2.0.0">
	<name>Facebook</name>
	<author>Tuiyo Project</author>
	<creationDate>December 2010</creationDate>
	<copyright>Copyright (C) 2005 - 2010 Livingstone Fultang. All rights reserved.</copyright>
	<license>http://www.gnu.org/licenses/gpl-2.0.html GNU/GPL</license>
	<authorEmail>admin@tuiyo.co.uk</authorEmail>
	<authorUrl>www.tuiyo.co.uk</authorUrl>
	<version>1.0.0</version>
	<description>Connect and share status updates between facebook and your profile</description>

	<params group="plugin">
		<param name="connectWithFacebook" type="button"  label="Connect With Facebook"  />
	</params>
	<params group="privacy">
		<param type="privacyel" name="viewFacebookFeed" label="Can View facebook feed"/>
		<param type="privacyel" name="viewFacebookProfilePicture" label="View facebook Profile Pic" />
		<param type="privacyel" name="postToFacebookProfile" label="Post to your facebook Profile" />
		<param type="privacyel" name="replytoFacebookPost" label="Reply to facebook Posts" />
	</params>
	<params group="administrator">
			<param type="text" class="TuiyoFormText" name="siteFBAppId" label="Facebook App ID"  description="Visit developers.facebook.com for more details" />
			<param type="text" class="TuiyoFormText" name="siteFBSecret" label="Facebook API Secret"  description="Visit developers.facebook.com for more details" />
	</params>

</install>
